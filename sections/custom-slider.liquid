<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"/>
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

  
<section class="section slider-section" style="background-color: {{section.settings.color_bg}}">
     
    <div class="swiper swiper-slider page-width"> 
      <div class="swiper-wrapper">
      {%- for block in section.blocks -%} 
        
        <div class="swiper-slide">
        <img  src="{{ block.settings.img | image_url }}" alt="Swiper">
        <h2>{{ block.settings.heading}}</h2>
        <p>{{ block.settings.description}}</p>
        </div>
        
        {% endfor %}
      </div>
    
      <span class="swiper-pagination"></span>
      <span class="swiper-button-prev"></span>
      <span class="swiper-button-next"></span>
      
    </div>
</section>


<style>
  .swiper-wrapper {
    padding-bottom:50px;
  }
  .section {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

<script>
    const swiper = new Swiper(".swiper-slider", {
  // Optional parameters
  centeredSlides: true,
  slidesPerView: 1,
  grabCursor: true,
  freeMode: false,
  loop: true,
  mousewheel: false,
  keyboard: {
    enabled: true
  },

  // Enabled autoplay mode
  // autoplay: {
  //   delay: 5000,
  //   disableOnInteraction: false
  // },

  // If we need pagination
  pagination: {
    el: ".swiper-pagination",
    dynamicBullets: false,
    clickable: true
  },

  // If we need navigation
  navigation: {
    nextEl: ".swiper-button-next",
    prevEl: ".swiper-button-prev"
  },

  // Responsive breakpoints
  breakpoints: {
    640: {
      slidesPerView: 2,
      spaceBetween: 10
    },
    1024: {
      slidesPerView: 3,
      spaceBetween: 10
    }
  }
});

  </script>

{% schema %}
  {
    "name": "custom-slider",
    "class": "ct-slider",
    "settings": [
      {
      "type": "color",
      "id": "color_bg",
      "label": "BG color",
      "default": "#FFFFFF"
      },
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "label": "padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "unit": "px",
      "label": "padding_bottom",
      "default": 40
    }
    ],
   "blocks": [
    {
      "type": "quote",
      "name": "Slider",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ], 
    
    "presets" : [
           {
             "name":"custom-slider"
           }
     ]   
  }
 
{% endschema %}


