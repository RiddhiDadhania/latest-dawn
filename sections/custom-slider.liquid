  "name": "custom-slider",
  "class": "ct-slider",
  "settings": [
    {
    "type": "color",
    "id": "color_bg",
    "label": "BG color",
    "default": "#FFFFFF"
    },
    {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "unit": "px",
    "label": "padding_top",
    "default": 40
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "unit": "px",
    "label": "padding_bottom",
    "default": 40
  }
  ],
 "blocks": [
  {
    "type": "quote",
    "name": "Slider",
    "settings": [
      {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description"
      }
    ]
  }
],

  "presets" : [
         {
           "name":"custom-slider"
         }
   ]
}
